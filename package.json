  "dependencies": {},
  "devDependencies": {
    "@storybook/react": "^3.4.10",
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "glob-loader": "^0.3.0",
    "jest": "^23.6.0",
    "lerna": "^3.3.1",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-test-renderer": "^16.5.0"
